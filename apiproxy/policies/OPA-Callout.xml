    <GrpcConnection>
        <Server name="opa-server"/>
    </GrpcConnection>
    <TimeoutMs>5000</TimeoutMs>
    <Configurations>
        <Property name="with.request.content">true</Property>
        <Property name="with.request.headers">true</Property>
    </Configurations>
</ExternalCallout>